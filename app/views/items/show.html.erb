<h1 class="page-header"><%= @item.title %> detail</h1>

<table class="table table-striped">
  <tr>
    <td>Title</td>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @item.description %></td>
  </tr>
  <tr>
    <td>Price</td>
    <td><%= number_to_currency(@item.price) %></td>
  </tr>
  <tr>
    <td>Category</td>
    <td><%= @item.category.title %></td>
  </tr>
  <tr>
    <td>Date</td>
    <td><%= l @item.buy_at %></td>
  </tr>
</table>

<%= link_to 'back', items_path, class: 'btn btn-link' %>
<%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary pull-right' %>