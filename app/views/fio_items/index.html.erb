<h1 class="page-header">Fio Imports</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fio_items.each do |fio_item| %>
      <tr>
        <td><%= fio_item.amount %></td>
        <td><%= l fio_item.date, format: '%d.%m.%Y' %></td>
        <td><%= fio_item.comment %></td>
        <td><%= link_to 'Accept', new_item_path(fio_item_id: fio_item.id), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', fio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @fio_items %>